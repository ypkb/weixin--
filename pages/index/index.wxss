/**index.wxss**/

.header {
  width: 100%;
}

.header .carousel {
  width: 100%;
  height: calc(100% - 70px);
}

.header .carousel .slide-image {
  width: 100%;
}

.header .shop-info {
  position: relative;
  padding-top: 40rpx;
}

.header .logo {
  width: 150rpx;
  height: 150rpx;
  background-color: #eee;
  position: absolute;
  top: -120rpx;
  left: 50%;
  margin-left: -75rpx;
}

.header .shop-name {
  text-align: center;
  font-weight: bold;
}

.header .greeting {
  padding: 0 30rpx;
  font-size: 30rpx;
}

.section {
  width: 100%;
  padding-bottom: 100rpx;
}

.section .btn-group {
  display: flex;
  height: 40px;
  width: 100%;
  position: relative;
}

.section .btn-group::after {
  content: "";
  width: 100%;
  height: 1px;
  background-color: #ddd;
  position: absolute;
  top: 110%;
  left: 0;
}

.section .btn-group .btn-defaut {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.section .product-list-arae {
  position: relative;
}

.section .product-item {
  display: flex;
  padding: 40rpx;
}

.section .product-item-img {
  flex: 1;
}

.section .product-item-info {
  flex: 3;
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
}

.section .product-item-name {
  font-size: 30rpx;
  flex: 1;
}

.section .product-item-content {
  padding-top: 20rpx;
  font-size: 25rpx;
  flex: 3;
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.section .product-item-sale {
  flex: 2;
  display: flex;
}

.section .product-item-sell-info {
  flex: 3;
  display: flex;
  flex-direction: column;
}

.section .product-item-user-num {
  flex: 2;
  text-align: right;
  /* padding-right: 50rpx; */
}

.section .product-item-price {
  font-size: 25rpx;
  flex: 1;
}

.product-item-user-num image {
  width: 50rpx;
  height: 50rpx;
}

.product-item-user-num text {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  top: -8rpx;
}

.shop-comment{
  padding: 20rpx;
}
.no-comment{
  text-align: center;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index:1;
}

.footer::before {
  content: "";
  width: 100%;
  height: 1px;
  background-color: #ddd;
  position: absolute;
  top: 0;
  left: 0;
}

.footer .cart {
  height: 100rpx;
  width: 100%;
  display: flex;
  line-height: 100rpx;
}

.footer .cart-info {
  flex: 3;
  display: flex;
  background-color: rgb(62, 66, 69);
  color: #fff;
  padding-left: 20rpx;
}

.cart-info image {
  width: 81rpx;
  height: 81rpx;
  margin-right: 20rpx;
}
.cart .cart-detail{
  position: absolute;
  bottom: 100%;
  left: 0;
  width: 100%;
}
.cart-detail .toolbar{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  background-color: rgb(238,238,238);
}
.cart-detail .cart-product-list{
  max-height: 400rpx;
  overflow-y: auto;
  background-color: rgb(255,255,255);
}
.cart .cart-product-item{
  display: flex;
  max-height: 100rpx;
  position: relative;
}
.cart-product-item .cart-pname{
  flex: 2;
  padding-left: 30rpx;
}
.cart-product-item .cart-pprice{
  flex: 1;
  padding-right: 30rpx;
  text-align: right;
}
.cart-product-item .cart-user-num{
  flex: 1;
}
.cart-product-item .cart-user-num image{
  position: relative;
  top: 10rpx;
}
.cart-product-item .cart-user-num text{
  position: relative;
  top: 5rpx;
}
.border-solid-top::before{
  text-align: center;
  content: "";
  width: 98%;
  height: 1px;
  background-color: #ddd;
  position: absolute;
  top: 0;
  left: 1%;
}

.footer .btn-create-order {
  flex: 1;
  background-color: rgb(79, 83, 86);
  text-align: center;
  color: #ddd;
}
.footer .cart-empty{
  color: #ddd;
  font-size: 30rpx;
}
.submitable{
  color: #fff !important;
  background-color: #67C23A !important;
}

.cover{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  position: absolute;
  left: 0;
  top: 0;
  display: none;
}
.cover-opn{
  display: block !important;
}