/* pages/product_detail/product_detail.wxss */

.section .product-info{
  padding: 20rpx;
}
.section .product-item-name {
  font-size: 50rpx;
}

.section .product-item-content {
  padding-top: 20rpx;
  font-size: 30rpx;
  width: 90%;
}

.section .product-item-sale {
  font-size: 30rpx;
}

.section .product-item-sell-info {
  font-size: 30rpx;
}

.section .product-item-user-num {
  text-align: right;
  /* padding-right: 50rpx; */
}

.section .product-item-price {
  font-size: 30rpx;
}


.product-item-user-num image {
  width: 50rpx;
  height: 50rpx;
}

.product-item-user-num text {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  top: -8rpx;
}
.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index:1;
}

.footer::before {
  content: "";
  width: 100%;
  height: 1px;
  background-color: #ddd;
  position: absolute;
  top: 0;
  left: 0;
}

.footer .cart {
  height: 100rpx;
  width: 100%;
  display: flex;
  line-height: 100rpx;
}

.footer .cart-info {
  flex: 3;
  display: flex;
  background-color: rgb(62, 66, 69);
  color: #fff;
  padding-left: 20rpx;
}

.cart-info image {
  width: 81rpx;
  height: 81rpx;
  margin-right: 20rpx;
}
.cart .cart-detail{
  position: absolute;
  bottom: 100%;
  left: 0;
  width: 100%;
}
.cart-detail .toolbar{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  background-color: rgb(238,238,238);
}
.cart .cart-product-item{
  display: flex;
  max-height: 100rpx;
  background-color: rgb(255,255,255);
  position: relative;
}
.cart-product-item .cart-pname{
  flex: 2;
  padding-left: 30rpx;
}
.cart-product-item .cart-pprice{
  flex: 1;
  padding-right: 30rpx;
  text-align: right;
}
.cart-product-item .cart-user-num{
  flex: 1;
  padding-top: 10rpx;
}
.border-solid-top::before{
  text-align: center;
  content: "";
  width: 98%;
  height: 1px;
  background-color: #ddd;
  position: absolute;
  top: 0;
  left: 1%;
}

.footer .btn-create-order {
  flex: 1;
  background-color: rgb(79, 83, 86);
  text-align: center;
  color: #ddd;
}
.footer .cart-empty{
  color: #ddd;
  font-size: 30rpx;
}
.submitable{
  color: #fff !important;
  background-color: #67C23A !important;
}

.cover{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  position: absolute;
  left: 0;
  top: 0;
  display: none;
}
.cover-opn{
  display: block !important;
}